extends layout

block content
  div(ng-app='DashIt')
    header.jumbotron.text-center
      div.container(ng-controller='LoginController' id='testCol')
        h1.text-center #{title}!
        p A simple (and fun!) way to keep track of all the awesome things you accomplish!
        div.col-md-offset-2.text-left
          h3 Login here
        div.row.text-center
          div.col-md-8.col-md-offset-2
            login(login='login')
            br
            div
              p Don't have an account? 
                a(ng-click='createAccount = !createAccount') Create one here!
              div.container(ng-show='!createAccount')
                form(name='createAccount')
                  div.row.text-center
                    div.col-lg-6.col-xs-12
                      input.form-control(type='text' name='firstName' ng-model='newUser.firstName')
                    div.col-lg-6.col-xs-12
                      input.form-control(type='text' name='lastName' ng-model='newUser.lastName')
                    div.col-lg-12
                      input.form-control(type='text' name='email' ng-model='newUser.email')
                      input.form-control(type='text' name='username' ng-model='newUser.name')
                      input.form-control(type='text' name='password' ng-model='newUser.password')
                
                   
        //- pre {{ login | json }} 
    div.container
      div.row
        div.col-md-4.col-sm-6.col-xs-12
          h3
            a About
          p find out more about this project!
        div.col-md-4.col-sm-6.col-xs-12
          h3
            a Connect
          p Connect with others who are currently using DashIt!
        div.col-md-4.col-sm-12
          h3
            a Share
          p Like this project?  Why not let some of yo franz know! (Please????  We'll like love you forever)
